{
  "name": "agent-payment-engine",
  "version": "0.1.0",
  "description": "Autonomous AI agent orchestration for payment systems - x402 protocol on Solana",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "example:templates": "tsx examples/load-templates.ts",
    "example:payment": "tsx examples/payment-flow.ts"
  },
  "keywords": [
    "ai-agents",
    "solana",
    "x402",
    "payments",
    "defi",
    "autonomous",
    "blockchain"
  ],
  "author": "Aviral",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.0",
    "@langchain/core": "^0.3.27",
    "@langchain/openai": "^0.4.1",
    "@solana/web3.js": "^1.98.4",
    "dotenv": "^16.4.7",
    "langchain": "^0.3.13",
    "tweetnacl": "^1.0.3",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/node": "^22.13.7",
    "@types/node-forge": "^1.3.14",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
